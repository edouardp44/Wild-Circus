{% extends 'base.html.twig' %}

{% block body %}
    {{ dump(app.session.all) }}
    <h2 class="mt-3">Veuillez choisir une date</h2>
    {% for showTour in showTours %}
        <div class="card mt-4">
            <div class="card-header">
                <h4>{{ showTour.city }}</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title">Adresse : {{ showTour.location }}</h5>
                <p class="card-text">Du {{ showTour.beginAt|date('d/m/Y')}} au {{ showTour.endAt|date('d/m/Y') }}</p>
                <a href="{{ path('cart_show_add', { 'id': showTour.id } ) }}" class="btn btn-outline-warning">Choisir cette date</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}

{% block title %}
    Date des passages
{% endblock %}
