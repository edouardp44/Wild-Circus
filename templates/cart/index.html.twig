{% extends 'base.html.twig' %}

{% block body %}
    <div class="bg-light p-3 mt-3">
        <h1>Votre panier</h1>
    </div>
    {% if items | length >  0 %}
        <table class="table mt-3">
            <thead>
            <tr>
                <th scope="col">Produit</th>
                <th scope="col">Prix</th>
                <th scope="col">Quantit√©</th>
                <th scope="col">Total</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody id="hello">
            {% for item in items %}
                <tr>
                    <th scope="row">{{ item.ticket.groupComposition }}</th>
                    <td>{{ item.ticket.price }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.ticket.price * item.quantity }}</td>
                    <td><a href="{{ path('cart_remove', { 'id' : item.ticket.id }) }}" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total :</td>
                <td>{{ total }}</td>
                <td></td>
            </tr>
            </tfoot>
        </table>
        <div class="card mt-4">
            <div class="card-header">
                <h4>{{ showTour.city }}</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title">Adresse : {{ showTour.location }}</h5>
                <p class="card-text">Du {{ showTour.beginAt|date('d/m/Y')}} au {{ showTour.endAt|date('d/m/Y') }}</p>
            </div>
        </div>
        <a href="{{ path('order_add') }}">
            <button class="btn btn-light mt-4">Payer</button>
        </a>
    {% else %}
        <p>Surprise, c'est vide !</p>
    {% endif %}
{% endblock %}
{% block javascripts %}
{% endblock %}
