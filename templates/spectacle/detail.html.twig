{% for categorys in spectacles %}
    {% for spectacle in categorys.spectacles %}
        <div class="row mt-5">
            <div class="col-md-12">
                <div class="media">
                    <img src="{{ spectacle.image }}" class="mr-3" alt="...">
                    <div class="media-body">
                        <h5 class="mt-0">{{ spectacle.name }}</h5>
                        {{ spectacle.description }}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}